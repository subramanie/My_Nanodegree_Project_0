<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffdfeaf1">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Headline" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_streamer"
        android:id="@+id/button"
        android:layout_marginTop="41dp"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#f08c35"
        android:textColor="#ffffff"
        android:width="200dp"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo1"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="12dp"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button"
        android:background="#f08c35"
        android:textColor="#ffffff"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo2"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:background="#f08c35"
        android:textColor="#ffffff"
        android:width="200dp"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ant_terminator"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="12dp"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:background="#f08c35"
        android:textColor="#ffffff"
        android:width="200dp"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/materialize"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="12dp"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:background="#f08c35"
        android:textColor="#ffffff"
        android:width="200dp"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_below="@+id/button5"
        android:textColor="#ffffff"
        android:width="200dp"
        android:theme="@android:style/TextAppearance.Holo.Widget.Button"
        android:background="#fc2b5f" />

</RelativeLayout>
